{
  "extends": [
    "standard-with-typescript"
  ],
  "parserOptions": {
    "project": "./tsconfig.eslint.json"
  },
  "rules": {
    "@typescript-eslint/strict-boolean-expressions": "off",
    "semi": "off",
    "comma-dangle": "off",
    "@typescript-eslint/semi": [
      "error"
    ],
    "space-before-function-paren": "off"
  }
}